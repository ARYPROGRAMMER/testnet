    "@typescript-eslint/parser": "^5.48.1",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-react": "^7.32.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "prettier": "^2.8.3",
    "typescript": "^4.9.4"
  },
  "engines": {
    "pnpm": ">=7.14.0",
    "npm": "pnpm",
    "yarn": "pnpm",
    "node": "^18.0.0"
  },
  "private": true,
  "packageManager": "pnpm@7.14.0"
